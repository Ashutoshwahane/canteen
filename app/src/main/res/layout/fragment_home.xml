<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/b22"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="79dp"

            android:fontFamily="@font/creepster"
            android:gravity="center"
            android:text="TMV CANTEEN"
            android:textColor="#050505"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            app:drawableTint="#00FFFFFF" />

        <TextView
            android:id="@+id/textView3"
            style="@android:style/Widget.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/ravi_prakash"
            android:gravity="center"
            android:shadowColor="#19BA94"
            android:text="FOOD IS OUR COMMON GROUND A UNIVERSAL EXPERIENCE"
            android:textColor="#FF6E40"
            android:textColorHighlight="#E63636"
            android:textColorLink="#E62A2A"
            android:textSize="26sp"
            android:textStyle="italic"
            app:drawableTint="#00FFFFFF" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:src="@drawable/friend" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="90dp"
            android:background="#F36C09FA"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="Food Gallery"
            android:textColor="#FBF7F7"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_marginTop="10dp"
                android:layout_width="436dp"
                android:layout_height="162dp"
                android:layout_gravity="center"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_marginTop="10dp"
                android:layout_width="436dp"
                android:layout_height="162dp"
                android:layout_gravity="center"
                android:src="@drawable/c2" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_marginTop="10dp"
                android:layout_width="436dp"
                android:layout_height="162dp"
                android:layout_gravity="center"
                android:src="@drawable/c1"  />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click Here For Order" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
